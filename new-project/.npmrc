# pnpm configuration for Railway production builds

# Disable interactive build script approval (required for CI/CD)
# This allows Prisma, esbuild, sharp, etc. to run their build scripts
enable-pre-post-scripts=true

# Auto-install peer dependencies
auto-install-peers=true
strict-peer-dependencies=false

# Allow lifecycle scripts (needed for Prisma generate, sharp, esbuild)
ignore-scripts=false

# Use frozen lockfile in CI/production
frozen-lockfile=false

